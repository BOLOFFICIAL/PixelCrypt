<Page x:Class="PixelCrypt2025.View.Page.SteganographyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixelCrypt2025.View.Page" 
      xmlns:fa="http://schemas.fontawesome.com/icons/" 
      xmlns:components="clr-namespace:PixelCrypt2025.Components"
      mc:Ignorable="d" 
      d:DesignHeight="400" 
      d:DesignWidth="600"
      Style="{StaticResource PageStyle}" 
      Background="{Binding Background}"
      Title="PixelCrypt">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="{Binding ContentBackground}">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button Style="{StaticResource ToolButtonStyle}"
                            Command="{Binding ClosePageCommand}">
                        <fa:ImageAwesome Icon="Regular_ArrowAltCircleLeft"
                                         Foreground="{Binding Foreground}"
                                         Width="25"
                                         Height="25"/>
                    </Button>
                </Grid>

                <Grid Grid.Column="1">
                    <Label Style="{StaticResource LabelStyle}"
                           Content="Стеганография"
                           FontWeight="Black"
                           Margin="5,0,0,0"
                           FontSize="25"
                           Foreground="{Binding Foreground}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding AddGridHeight}"/>
                <RowDefinition Height="{Binding DataGridHeight}"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Button Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding AddImageCommand}"
                        IsEnabled="{Binding IsButtonFree}"
                        HorizontalAlignment="Center"
                        Height="30"
                        Width="110">
                    <TextBlock Text="Добавить"
                               FontSize="15"
                               TextAlignment="Center"/>
                </Button>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="5*" 
                                      MinWidth="250"/>
                    <ColumnDefinition Width="{Binding ViewImageWidth}"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          VerticalAlignment="Top"
                          Margin="0,0,0,5">
                        <Border Background="{Binding ContentBackground}"
                                CornerRadius="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0"
                                      Margin="0,10,0,0"
                                      HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Button Style="{StaticResource ActionButtonStyle}" 
                                                Command="{Binding AddImageCommand}"
                                                IsEnabled="{Binding IsButtonFree}"
                                                HorizontalAlignment="Center"
                                                Height="30"
                                                Width="110"
                                                Margin="0,0,5,0">
                                            <TextBlock Text="Добавить"
                                                       FontSize="15"
                                                       TextAlignment="Center"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Button Style="{StaticResource ActionButtonStyle}" 
                                                Command="{Binding ClearImageCommand}"
                                                IsEnabled="{Binding IsButtonFree}"
                                                HorizontalAlignment="Center"
                                                Height="30"
                                                Width="110"
                                                Margin="5,0,0,0">
                                            <TextBlock Text="Очистить"
                                                       FontSize="15"
                                                       TextAlignment="Center"/>
                                        </Button>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1"
                                      Margin="0,10">
                                    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                                  Content="{Binding FilePathImageStackPanel,UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1"
                          Margin="0,0,0,5">
                        <Border Background="{Binding ContentBackground}"
                                CornerRadius="15"
                                Padding="5,0,7,0">
                            <Grid Grid.Row="1"
                                  Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Border BorderBrush="{Binding }"
                                            Background="{Binding }"
                                            CornerRadius="10,0,0,10"
                                            Padding="10,5"
                                            Margin="0,0,0,0"
                                            BorderThickness="0">
                                        <TextBlock Text="Пароль"
                                                   Foreground="{Binding Foreground}"
                                                   VerticalAlignment="Center"
                                                   FontSize="15"/>
                                    </Border>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Border BorderBrush="{Binding Foreground}"
                                            BorderThickness="1,0,0,0"
                                            CornerRadius="0,10,10,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ClosePasswordWidth,UpdateSourceTrigger=PropertyChanged}"/>
                                                <ColumnDefinition Width="{Binding OpenPasswordWidth,UpdateSourceTrigger=PropertyChanged}"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <components:BindablePasswordBox Password="{Binding Password,UpdateSourceTrigger=PropertyChanged}"
                                                                                FontSize="15"
                                                                                IsEnabled="{Binding IsButtonFree}"
                                                                                Padding="10,0,0,0"
                                                                                FontWeight="Bold"
                                                                                BorderThickness="0"
                                                                                VerticalContentAlignment="Center"
                                                                                HorizontalAlignment="Stretch"/>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <TextBox Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="15"
                                                         IsEnabled="{Binding IsButtonFree}"
                                                         Margin="1,0,0,0"
                                                         Padding="10,0,0,0"
                                                         Background="{Binding ContentBackground}"
                                                         Foreground="{Binding Foreground}"
                                                         HorizontalAlignment="Stretch"
                                                         HorizontalContentAlignment="Center"
                                                         BorderThickness="0"
                                                         VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <Grid Grid.Column="2"
                                      Margin="10,0,0,0">
                                    <Button Style="{StaticResource ToolButtonStyle}"
                                            Command="{Binding PaswordViewCommand}">
                                        <fa:ImageAwesome Icon="{Binding ShowPasword,UpdateSourceTrigger=PropertyChanged}"
                                                         Foreground="{Binding Foreground}"
                                                         Width="25"
                                                         Height="25"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Border Background="{Binding ContentBackground}"
                                CornerRadius="15">
                            <Grid HorizontalAlignment="Center"
                                  Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="{Binding SaveDataWidth}"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          Margin="10,0,5,0">
                                        <Button Style="{StaticResource ActionButtonStyle}" 
                                                IsEnabled="{Binding IsButtonFree}"
                                                Command="{Binding DoActionCommand}"
                                                CommandParameter="{Binding InputAction}"
                                                HorizontalAlignment="Center"
                                                ToolTip="Импортировать данные"
                                                Height="35"
                                                Width="55">
                                            <fa:ImageAwesome Icon="Solid_SignInAlt"
                                                             Foreground="{Binding Foreground}"
                                                             Width="25"
                                                             Height="25"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="1"
                                          Margin="5,0,10,0">
                                        <Button Style="{StaticResource ActionButtonStyle}" 
                                                IsEnabled="{Binding IsButtonFree}"
                                                Command="{Binding DoActionCommand}"
                                                CommandParameter="{Binding OutputAction}"
                                                HorizontalAlignment="Center"
                                                ToolTip="Экспортировать данные"
                                                Height="35"
                                                Width="55">
                                            <fa:ImageAwesome Icon="Solid_SignOutAlt"
                                                             Foreground="{Binding Foreground}"
                                                             Width="25"
                                                             Height="25"/>
                                        </Button>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="1"
                                      Margin="0,0,10,0">
                                    <Button Style="{StaticResource ActionButtonStyle}" 
                                            Command="{Binding SaveCommand}"
                                            HorizontalAlignment="Center"
                                            Height="35"
                                            Width="150">
                                        <TextBlock Text="Сохранить"
                                                   FontSize="20"
                                                   TextAlignment="Center"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1"
                      VerticalAlignment="Top">
                    <Border Background="{Binding ContentBackground}"
                            CornerRadius="15"
                            Margin="10,0,0,0">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Button Style="{StaticResource ActionButtonStyle}" 
                                            Command="{Binding ChooseFileCommand}"
                                            IsEnabled="{Binding IsButtonFree}"
                                            HorizontalAlignment="Center"
                                            Height="30"
                                            Width="100">
                                        <TextBlock Text="Выбрать"
                                                   FontSize="15"
                                                   TextAlignment="Center"/>
                                    </Button>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Border BorderBrush="{Binding Foreground}"
                                            BorderThickness="1"
                                            Margin="10,0"
                                            Padding="10,0"
                                            CornerRadius="10">
                                        <TextBlock Text="{Binding InputFileName}"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Foreground="{Binding Foreground}"
                                                   FontSize="15"
                                                   ToolTip="{Binding InputFilePath}"/>
                                    </Border>
                                </Grid>

                                <Grid Grid.Column="2">
                                    <Button Style="{StaticResource ToolButtonStyle}"
                                            IsEnabled="{Binding IsButtonFree}"
                                            Command="{Binding RemoveFileCommand}">
                                        <fa:ImageAwesome Icon="Regular_TimesCircle"
                                                         Foreground="{Binding Foreground}"
                                                         Width="25"
                                                         Height="25"/>
                                    </Button>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Border BorderBrush="{Binding Foreground}"
                                        BorderThickness="1"
                                        Margin="0,10,0,0"
                                        Padding="10"
                                        CornerRadius="10">
                                    <TextBox Text="{Binding InputData}"
                                             Foreground="{Binding Foreground}"
                                             IsReadOnly="{Binding IsReadOnlyInputData}"
                                             BorderThickness="0"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             FontSize="15"
                                             Background="Transparent"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Column="2">
                    <Border Background="{Binding ContentBackground}"
                            CornerRadius="15"
                            Margin="10,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" 
                                               MinHeight="250"/>
                                <RowDefinition Height="*"
                                               MaxHeight="250"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Border BorderBrush ="{Binding Foreground}"
                                        Margin="10"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                    <Border BorderBrush ="{Binding Foreground}"
                                            Margin="10"
                                            BorderThickness="1"
                                            Padding="5"
                                            CornerRadius="5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                        <Image Source="{Binding ImagePath}"/>
                                    </Border>
                                </Border>
                            </Grid>

                            <Grid Grid.Row="1"
                                  Margin="10,0,10,10">
                                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0"
                                              Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Border Background="{Binding Foreground}"
                                                        CornerRadius="10,0,0,10">
                                                    <Label Content="Имя"
                                                           FontSize="15"
                                                           Margin="10,0"
                                                           VerticalAlignment="Top"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{Binding Background}"/>
                                                </Border>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Border BorderBrush="{Binding Foreground}"
                                                        BorderThickness="0,1,1,1"
                                                        CornerRadius="0,10,10,0">
                                                    <TextBox Text ="{Binding ImageName}"
                                                             Margin="5"
                                                             TextWrapping="Wrap"
                                                             BorderThickness="0"
                                                             IsReadOnly="True"
                                                             Background="{Binding ContentBackground}"
                                                             Foreground="{Binding Foreground}"
                                                             FontSize="15"/>
                                                </Border>
                                            </Grid>

                                        </Grid>

                                        <Grid Grid.Row="1"
                                              Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Border Background="{Binding Foreground}"
                                                        CornerRadius="10,0,0,10">
                                                    <Label Content="Путь"
                                                           FontSize="15"
                                                           Margin="10,0"
                                                           VerticalAlignment="Top"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{Binding Background}"/>
                                                </Border>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Border BorderBrush="{Binding Foreground}"
                                                        BorderThickness="0,1,1,1"
                                                        CornerRadius="0,10,10,0">
                                                    <TextBox Text ="{Binding ImagePath}"
                                                             Margin="5"
                                                             TextWrapping="Wrap"
                                                             BorderThickness="0"
                                                             IsReadOnly="True"
                                                             Background="{Binding ContentBackground}"
                                                             Foreground="{Binding Foreground}"
                                                             FontSize="15"/>
                                                </Border>
                                            </Grid>

                                        </Grid>

                                        <Grid Grid.Row="2"
                                              Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Border Background="{Binding Foreground}"
                                                        CornerRadius="10,0,0,10">
                                                    <Label Content="Размер"
                                                           FontSize="15"
                                                           Margin="10,0"
                                                           VerticalAlignment="Top"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{Binding Background}"/>
                                                </Border>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Border BorderBrush="{Binding Foreground}"
                                                        BorderThickness="0,1,1,1"
                                                        CornerRadius="0,10,10,0">
                                                    <TextBox Text ="{Binding ImageLength}"
                                                             Margin="5"
                                                             TextWrapping="Wrap"
                                                             BorderThickness="0"
                                                             IsReadOnly="True"
                                                             Background="{Binding ContentBackground}"
                                                             Foreground="{Binding Foreground}"
                                                             FontSize="15"/>
                                                </Border>
                                            </Grid>

                                        </Grid>

                                        <Grid Grid.Row="3"
                                              Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Border Background="{Binding Foreground}"
                                                        CornerRadius="10,0,0,10">
                                                    <Label Content="Расширение"
                                                           FontSize="15"
                                                           Margin="10,0"
                                                           VerticalAlignment="Top"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{Binding Background}"/>
                                                </Border>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Border BorderBrush="{Binding Foreground}"
                                                        BorderThickness="0,1,1,1"
                                                        CornerRadius="0,10,10,0">
                                                    <TextBox Text ="{Binding ImageExtension}"
                                                             Margin="5"
                                                             TextWrapping="Wrap"
                                                             BorderThickness="0"
                                                             IsReadOnly="True"
                                                             Background="{Binding ContentBackground}"
                                                             Foreground="{Binding Foreground}"
                                                             FontSize="15"/>
                                                </Border>
                                            </Grid>

                                        </Grid>

                                        <Grid Grid.Row="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Border Background="{Binding Foreground}"
                                                        CornerRadius="10,0,0,10">
                                                    <Label Content="Разрешение"
                                                           FontSize="15"
                                                           Margin="10,0"
                                                           VerticalAlignment="Top"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{Binding Background}"/>
                                                </Border>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Border BorderBrush="{Binding Foreground}"
                                                        BorderThickness="0,1,1,1"
                                                        CornerRadius="0,10,10,0">
                                                    <TextBox Text ="{Binding ImagePermission}"
                                                             Margin="5"
                                                             TextWrapping="Wrap"
                                                             BorderThickness="0"
                                                             IsReadOnly="True"
                                                             Background="{Binding ContentBackground}"
                                                             Foreground="{Binding Foreground}"
                                                             FontSize="15"/>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>