<Page x:Class="PixelCrypt2025.View.Page.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixelCrypt2025.View.Page"
      mc:Ignorable="d" 
      d:DesignHeight="400" 
      d:DesignWidth="600"
      Style="{StaticResource PageStyle}" 
      Background="{Binding Color1}"
      Title="PixelCrypt">

    <Grid VerticalAlignment="Center"
          KeyboardNavigation.TabNavigation="None"
          HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="0,0,0,10">
            <Label Style="{StaticResource LabelStyle}"
                   Content="PixelCrypt"
                   FontWeight="Black"
                   FontSize="60"
                   Foreground="{Binding Color3}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Button Style="{StaticResource ActionButtonStyle}" 
                        Command="{Binding OpenImageProcessingPageCommand}"
                        CommandParameter="Сryptography"
                        HorizontalAlignment="Center"
                        Height="35"
                        Width="200"
                        Margin="0,0,0,10">
                    <TextBlock Text="Криптография"
                               FontSize="20"
                               TextAlignment="Center"/>
                </Button>
            </Grid>

            <Grid Grid.Row="1">
                <Button Style="{StaticResource ActionButtonStyle}" 
                        Command="{Binding OpenImageProcessingPageCommand}"
                        CommandParameter="Steganography"
                        HorizontalAlignment="Center"
                        Height="35"
                        Width="200"
                        Margin="0,0,0,10">
                    <TextBlock Text="Стеганография"
                               FontSize="20"
                               TextAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
