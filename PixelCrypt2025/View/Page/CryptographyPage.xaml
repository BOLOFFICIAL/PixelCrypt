<Page x:Class="PixelCrypt.View.Page.CryptographyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixelCrypt.View.Page" xmlns:fa="http://schemas.fontawesome.com/icons/" xmlns:components="clr-namespace:PixelCrypt.Components"
      mc:Ignorable="d" 
      d:DesignHeight="400" 
      d:DesignWidth="600"
      Style="{StaticResource PageStyle}" 
      Background="{Binding Background}"
      Title="PixelCrypt">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="{Binding ContentBackground}">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button Style="{StaticResource ToolButtonStyle}"
                            Command="{Binding ClosePageCommand}">
                        <fa:ImageAwesome Icon="Regular_ArrowAltCircleLeft"
                                         Foreground="{Binding Foreground}"
                                         Width="25"
                                         Height="25"/>
                    </Button>
                </Grid>

                <Grid Grid.Column="1">
                    <Label Style="{StaticResource LabelStyle}"
                           Content="Криптография"
                           FontWeight="Black"
                           Margin="5,0,0,0"
                           FontSize="25"
                           Foreground="{Binding Foreground}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Button Style="{StaticResource ActionButtonStyle}" 
                        Command="{Binding AddImageCommand}"
                        HorizontalAlignment="Center"
                        Height="30"
                        Width="100">
                    <TextBlock Text="Добавить"
                               FontSize="15"
                               FontWeight="Bold"
                               TextAlignment="Center"/>
                </Button>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="0,0,0,5">
                        <Border Background="{Binding ContentBackground}"
                                CornerRadius="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0"
                                      Margin="0,10"
                                      HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Button Style="{StaticResource ActionButtonStyle}" 
                                                Command="{Binding AddImageCommand}"
                                                HorizontalAlignment="Center"
                                                Height="30"
                                                Width="110"
                                                Margin="0,0,5,0">
                                            <TextBlock Text="Добавить"
                                                       FontSize="15"
                                                       FontWeight="Bold"
                                                       TextAlignment="Center"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Button Style="{StaticResource ActionButtonStyle}" 
                                                Command="{Binding ClearImageCommand}"
                                                HorizontalAlignment="Center"
                                                Height="30"
                                                Width="110"
                                                Margin="5,0,0,0">
                                            <TextBlock Text="Очистить"
                                                       FontSize="15"
                                                       FontWeight="Bold"
                                                       TextAlignment="Center"/>
                                        </Button>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <ScrollViewer VerticalScrollBarVisibility="Hidden"/>

                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1"
                          Margin="0,0,0,5">
                        <Border Background="{Binding ContentBackground}"
                                CornerRadius="15"
                                Padding="5,0,7,0">
                            <Grid Grid.Row="1"
                                  Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Border BorderBrush="{Binding }"
                                            Background="{Binding }"
                                            CornerRadius="10,0,0,10"
                                            Padding="10,5"
                                            Margin="0,0,0,0"
                                            BorderThickness="0">
                                        <TextBlock Text="Пароль"
                                                   Foreground="{Binding Foreground}"
                                                   VerticalAlignment="Center"
                                                   FontSize="15"/>
                                    </Border>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Border BorderBrush="{Binding Foreground}"
                                            BorderThickness="1,0,0,0"
                                            CornerRadius="0,10,10,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding Path=ClosePasswordWidth,UpdateSourceTrigger=PropertyChanged}"/>
                                                <ColumnDefinition Width="{Binding Path=OpenPasswordWidth,UpdateSourceTrigger=PropertyChanged}"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <components:BindablePasswordBox Password="{Binding Path=Password,UpdateSourceTrigger=PropertyChanged}"
                                                                                FontSize="15"
                                                                                Padding="10,0,0,0"
                                                                                FontWeight="Bold"
                                                                                BorderThickness="0"
                                                                                VerticalContentAlignment="Center"
                                                                                HorizontalAlignment="Stretch"/>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <TextBox Text="{Binding Path=Password,UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="15"
                                                         Padding="10,0,0,0"
                                                         IsEnabled="{Binding Path=IsButtonFree,UpdateSourceTrigger=PropertyChanged}"
                                                         Background="{Binding ContentBackground}"
                                                         Foreground="{Binding Foreground}"
                                                         HorizontalAlignment="Stretch"
                                                         HorizontalContentAlignment="Center"
                                                         BorderThickness="0"
                                                         VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <Grid Grid.Column="2"
                                      Margin="10,0,0,0">
                                    <Button Style="{StaticResource ToolButtonStyle}"
                                            Command="{Binding PaswordViewCommand}">
                                        <fa:ImageAwesome Icon="{Binding ShowPasword,UpdateSourceTrigger=PropertyChanged}"
                                                         Foreground="{Binding Foreground}"
                                                         Width="25"
                                                         Height="25"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Border Background="{Binding ContentBackground}"
                                CornerRadius="15">
                            <Grid HorizontalAlignment="Center"
                                  Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Button Style="{StaticResource ActionButtonStyle}" 
                                                Command=""
                                                HorizontalAlignment="Center"
                                                ToolTip="Зашифровать"
                                                Margin="0,0,5,0"
                                                Height="35"
                                                Width="35">
                                            <fa:ImageAwesome Icon="Solid_Lock"
                                                             Foreground="{Binding Foreground}"
                                                             Width="25"
                                                             Height="25"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Button Style="{StaticResource ActionButtonStyle}" 
                                                Command=""
                                                HorizontalAlignment="Center"
                                                ToolTip="Расшифровать"
                                                Margin="5,0,0,0"
                                                Height="35"
                                                Width="35">
                                            <fa:ImageAwesome Icon="Solid_LockOpen"
                                                             Foreground="{Binding Foreground}"
                                                             Width="25"
                                                             Height="25"/>
                                        </Button>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Button Style="{StaticResource ActionButtonStyle}" 
                                            Command="{Binding OpenImageProcessingPageCommand}"
                                            HorizontalAlignment="Center"
                                            Height="35"
                                            Width="140"
                                            Margin="10,0,0,0">
                                        <TextBlock Text="Сохранить"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   TextAlignment="Center"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1">

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
