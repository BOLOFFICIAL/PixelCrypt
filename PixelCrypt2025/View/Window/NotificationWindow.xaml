<Window x:Class="PixelCrypt2025.View.Window.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelCrypt2025.View.Window" 
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="{Binding Title}"
        Style="{StaticResource WindowStyle}" 
        MinWidth="250"
        MaxWidth="300"
        WindowStartupLocation="CenterOwner"
        MinHeight="300"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight">
    
    <Grid KeyboardNavigation.TabNavigation="None">
        <Border BorderBrush="{Binding Color3}"
                BorderThickness="2"
                CornerRadius="15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" 
                                     EndPoint="0.5,1">
                    <GradientStop Offset="0" 
                                  Color="{Binding StatusColor}" />
                    <GradientStop Offset="1" 
                                  Color="{Binding Color2}" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <fa:ImageAwesome Icon="{Binding StatusIcon}"
                                     Width="90"
                                     VerticalAlignment="Center"
                                     Height="90"
                                     Foreground="{Binding Color3}">
                        <fa:ImageAwesome.Effect>
                            <BlurEffect Radius="5"/>
                        </fa:ImageAwesome.Effect>
                    </fa:ImageAwesome>
                </Grid>

                <Grid Grid.Row="1" 
                      Margin="10,0,10,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="10,0">
                        <TextBlock Text="{Binding Title}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{Binding Color3}"
                                   TextWrapping="Wrap"/>
                    </Grid>

                    <Grid Grid.Row="1"
                          Margin="10,20">
                        <TextBlock Text="{Binding Content}"
                                   Foreground="{Binding Color3}"
                                   FontSize="15"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{Binding OkGridLength}"/>
                            <RowDefinition Height="{Binding YesNoGridLength}"/>
                            <RowDefinition Height="{Binding TextGridLength}"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Height="40"
                              HorizontalAlignment="Center">
                            <Button Content="Ok"
                                    FontSize="15"
                                    Width="60"
                                    Command="{Binding ReturnResultCommand}"
                                    CommandParameter="{Binding ResultTypeOk}"
                                    Style="{StaticResource ActionButtonStyle}" />
                        </Grid>

                        <Grid Grid.Row="1"
                              Height="40"
                              HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0"
                                  Margin="0,0,5,0">
                                <Button Content="Да"
                                        FontSize="15"
                                        Width="60"
                                        Command="{Binding ReturnResultCommand}"
                                        CommandParameter="{Binding ResultTypeYes}"
                                        Style="{StaticResource ActionButtonStyle}" />
                            </Grid>

                            <Grid Grid.Column="1"
                                  Margin="5,0,0,0">
                                <Button Content="Нет"
                                        FontSize="15"
                                        Width="60"
                                        Command="{Binding ReturnResultCommand}"
                                        CommandParameter="{Binding ResultTypeNo}"
                                        Style="{StaticResource ActionButtonStyle}" />
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="2">

                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>