    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Button BorderThickness="1"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding Path=ClosePageCommand}"
                        Padding="0">
                    <fa:ImageAwesome Icon="Regular_ArrowAltCircleLeft"
                                     Foreground="{Binding Path=Color3}"
                                     Width="25"
                                     Height="25"/>
                </Button>
            </Grid>

            <Grid Grid.Column="1">
                <TextBlock Text="Картинка"
                           Foreground="{Binding Path=Color3}"
                           FontSize="20"
                           Margin="10,0,0,0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Margin="0,10,0,0"
              HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="630"/>
                <ColumnDefinition Width="{Binding Path=ResultImageWidth}"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Border CornerRadius="10"
                            BorderBrush="{Binding Path=Color3}"
                            Background="{Binding Path=Color4}"
                            Margin="0,0,0,10"
                            Padding="10"
                            BorderThickness="1">
                        <Grid>
                            <Grid>
                                <Image Source="{Binding Path=ImageData,UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <Grid>
                                <Button Content="Выбрать"
                                        Visibility="{Binding Path = ChoseImageVisibility}"
                                        Command="{Binding Path=ChoseImageCommand}"
                                        ToolTip = "Выбор изображения для получения или запиcи данных"
                                        BorderThickness="1"
                                        BorderBrush="{Binding Path=Color3}"
                                        Foreground="{Binding Path=Color3}"
                                        Background="{Binding Path = Color2}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="1" HorizontalAlignment="Center" MaxWidth="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{Binding Path=ChoseImageWidth}"/>
                        <RowDefinition Height="{Binding Path=ActionWidth}"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Button Content="Выбрать"
                                    Command="{Binding Path=ChoseImageCommand}"
                                    ToolTip = "Выбор изображения для шифрования или расшифровывание"
                                    BorderThickness="1"
                                    BorderBrush="{Binding Path=Color3}"
                                    Foreground="{Binding Path=Color3}"
                                    Background="{Binding Path = Color2}"/>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Border BorderBrush="{Binding Path=Color3}"
                                    Background="{Binding Path=Color4}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Margin="10,0,0,0">
                                <TextBox Text="{Binding Path=FilePathImage,UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True"
                                         FontSize="15"
                                         MinWidth="150"
                                         Foreground="{Binding Path=Color3}"
                                         Padding="10,0"
                                         HorizontalAlignment="Stretch"
                                         HorizontalContentAlignment="Center"
                                         BorderBrush="Transparent"
                                         VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Border BorderBrush="{Binding Path=Color3}"
                                        Background="{Binding Path=Color4}"
                                        CornerRadius="10,0,0,10"
                                        Padding="10,5"
                                        Margin="0,0,0,0"
                                        BorderThickness="1">
                                    <TextBlock Text="Пароль"
                                               Foreground="{Binding Path=Color3}"
                                               VerticalAlignment="Center"
                                               FontSize="15"/>
                                </Border>
                            </Grid>

                            <Grid Grid.Column="1">
                                <Border BorderBrush="{Binding Path=Color3}"
                                        Background="{Binding Path=Color4}"
                                        BorderThickness="0,1,1,1"
                                        CornerRadius="0,10,10,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding Path=ClosePasswordWidth,UpdateSourceTrigger=PropertyChanged}"/>
                                            <ColumnDefinition Width="{Binding Path=OpenPasswordWidth,UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <components:BindablePasswordBox Password="{Binding Path=Password,UpdateSourceTrigger=PropertyChanged}"
                                                                            FontSize="15"
                                                                            Padding="5,0,10,0"
                                                                            FontWeight="Bold"
                                                                            BorderThickness="0"
                                                                            VerticalContentAlignment="Center"
                                                                            HorizontalAlignment="Stretch"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <TextBox Text="{Binding Path=Password,UpdateSourceTrigger=PropertyChanged}"
                                                     FontSize="15"
                                                     Padding="10,0"
                                                     Foreground="{Binding Path=Color3}"
                                                     HorizontalAlignment="Stretch"
                                                     HorizontalContentAlignment="Center"
                                                     BorderBrush="Transparent"
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>

                            <Grid Grid.Column="2"
                                  Margin="10,0,0,0">
                                <Button BorderThickness="1"
                                        FontWeight="Bold"
                                        Padding="0"
                                        Command="{Binding Path=ShowPaswordCommand}"
                                        Background="Transparent"
                                        BorderBrush="Transparent">
                                    <fa:ImageAwesome Icon="{Binding Path=ShowPasword,UpdateSourceTrigger=PropertyChanged}"
                                                     Foreground="{Binding Path=Color3}"
                                                     Width="30"
                                                     Height="30"/>
                                </Button>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1"
                              Margin="0,10,0,0"
                              HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="{Binding Path=SaveButtonWidth}"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Button Margin="0,0,0,0"
                                            Background="Transparent"
                                            Command="{Binding Path=DoActionCommand}"
                                            CommandParameter="Encrypt"
                                            BorderBrush="{Binding Path=Color3}"
                                            Padding="5">
                                        <fa:ImageAwesome Icon="Solid_Lock"
                                                         Foreground="{Binding Path=Color3}"
                                                         Width="30"
                                                         Height="30"/>
                                    </Button>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Button Margin="10,0,0,0"
                                            Background="Transparent"
                                            Command="{Binding Path=DoActionCommand}"
                                            CommandParameter="Decrypt"
                                            BorderBrush="{Binding Path=Color3}"
                                            Padding="5">
                                        <fa:ImageAwesome Icon="Solid_LockOpen"
                                                         Foreground="{Binding Path=Color3}"
                                                         Width="30"
                                                         Height="30"/>
                                    </Button>
                                </Grid>
                            </Grid>

                            <Grid Grid.Column="1">
                                <Button Content="Сохранить"
                                        BorderThickness="1"
                                        Command="{Binding Path=SaveCommand}"
                                        BorderBrush="{Binding Path=Color3}"
                                        Foreground="{Binding Path=Color3}"
                                        Background="{Binding Path = Color2}"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Border CornerRadius="10"
                        BorderBrush="{Binding Path=Color3}"
                        Background="{Binding Path=Color4}"
                        Margin="10,0,0,0"
                        Padding="10"
                        BorderThickness="1">
                    <Grid>
                        <Image x:Name="ResultImage"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
