                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0"
                                      Margin="0,10,0,0">
                                    <Border CornerRadius="10"
                                            BorderBrush="{Binding Path=Color3}"
                                            Background="{Binding Path=Color4}"
                                            Padding="10"
                                            Margin="0,0,5,0"
                                            BorderThickness="0">
                                        <Grid>
                                            <Image Source="{Binding Path=ImageData,UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Border CornerRadius="10"
                                            BorderBrush="{Binding Path=Color3}"
                                            Background="{Binding Path=Color4}"
                                            Padding="10,0,5,10"
                                            Margin="0,10,0,0"
                                            BorderThickness="0">
                                        <Grid>
                                            <ScrollViewer Content="{Binding Path=FilePathImageStackPanel,UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalContentAlignment="Left"
                                                          VerticalScrollBarVisibility="Hidden"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
